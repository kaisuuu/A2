{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
      "text": "Population Trend Over the Years",
      "anchor": "start"
  },
  "data": {
      "url": "https://raw.githubusercontent.com/kaisuuu/3179/main/dataset/World%20Population%20Live%20Dataset.csv"
  },
  "transform": [
      {
          "fold": ["1970", "1980", "1990", "2000", "2010", "2022"]
      },
      {
          "filter": "isValid(datum.value) && datum.value > 0"
      },
      {
          "filter": "indexof(['Australia', 'USA', 'China', 'India', 'Brazil', 'Russia', 'France', 'Germany', 'Canada', 'Japan', 'South Korea'], datum.name) !== -1"
      },
      {
          "filter": "datum.key <= currentYear"
      }
  ],
  "width": 800,
  "height": 500,
  "selection": {
      "selected": {
          "type": "multi",
          "fields": ["name"],
          "bind": "legend"
      }
  },
  "encoding": {
      "x": {
          "field": "key",
          "type": "ordinal",
          "axis": {
              "title": "Year"
          }
      },
      "y": {
          "field": "value",
          "type": "quantitative",
          "axis": {
              "title": "Population",
              "format": "~s"
          }
      },
      "color": {
          "field": "name",
          "type": "nominal",
          "scale": {
              "scheme": "tableau20"
          },
          "legend": {
              "title": "Country"
          }
      },
      "opacity": {
          "condition": {
              "selection": "selected",
              "value": 1
          },
          "value": 0.1
      }
  },
  "mark": {
      "type": "line",
      "point": true,
      "strokeWidth": 2,
      "tooltip": [
          {
              "field": "name",
              "type": "nominal",
              "title": "Country"
          },
          {
              "field": "key",
              "type": "ordinal",
              "title": "Year"
          },
          {
              "field": "value",
              "type": "quantitative",
              "title": "Population",
              "format": ".2s"
          }
      ]
  },
  "params": [
      {
          "name": "currentYear",
          "value": 2000,
          "bind": {
              "input": "range",
              "min": 1970,
              "max": 2022,
              "step": 0.5,
              "name": "Year"
          }
      }
  ]
}
